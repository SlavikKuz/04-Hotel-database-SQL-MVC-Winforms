                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label asp-for="DayTill" class="form-control-plaintext"></label>
                    <input asp-for="DayTill" class="form-control" />
                    <span asp-validation-for="DayTill" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="form-row">
            <label class="form-control-plaintext">Guest Name</label>
            <div class="input-group mb-2 col-md-9">
                <select asp-for="GuestId" asp-items="Model.SelectListGuest" class="form-control"></select>
                <span asp-validation-for="GuestId" class="text-danger"></span>
                <div class="input-group-append">
                    <input type="submit" name="bookingButton" value="AddGuest" class="btn btn-light btn-sm" />
                </div>
            </div>
            <input type="button" class="btn btn-primary mb-2 mx-auto" value="New Guest" onclick="location.href='@Url.Action("Create", "ClientModel")'" />
        </div>


        <div class="form-row">
            @Html.DisplayNameFor(model => model.GuestList)
            <div class="form-control" readonly>
                @foreach (var item in Model.ShowSelectedGuests)
                    @(item + ", ")
            </div>
        </div>

        <div class="form-row">
            @if (Model.GuestList != null)
                for (var i = 0; i < Model.GuestList.Count; i++)
                    @Html.HiddenFor(model => Model.GuestList[i].ClientId)
        </div>

        <br>

        <div class="form-row">
            <div class="input-group mb-2 col-md-9">
                <select asp-for="RoomId" asp-items="Model.SelectListRoom" class="form-control"></select>
                <span asp-validation-for="RoomId" class="text-danger"></span>
                <div class="input-group-append">
                    <input type="submit" name="bookingButton" value="AddRoom" class="btn btn-light btn-sm" />
                </div>
            </div>
            <div class="form-check mb-2 form-check-inline mx-auto">
                <input class="form-check-input" type="checkbox" asp-for="Booking.WithKids">
                <label asp-for="Booking.WithKids" class="form-check-label"></label>
            </div>
        </div>

        <div class="form-row">
            @Html.DisplayNameFor(model => model.RoomList)
            <div class="form-control" readonly>
                @foreach (var item in Model.ShowSelectedRooms)
                    @(item.ToString() + ", ")
            </div>
        </div>
        @if (Model.RoomList != null)
            for (var i = 0; i < Model.RoomList.Count; i++)
                @Html.HiddenFor(model => Model.RoomList[i].RoomId)


        <div class="form-row">
            <label asp-for="Booking.Info" class="form-control-plaintext"></label>
            <input asp-for="Booking.Info" class="form-control" />
            <span asp-validation-for="Booking.Info" class="text-danger"></span>
        </div>*@

