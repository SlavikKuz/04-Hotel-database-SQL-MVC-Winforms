@model HotelDb.WebUI.Models.BookingModel

@{
    ViewData["Title"] = "Create";
}

<h1>Add New Booking</h1>

<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DayFrom" class="control-label"></label>
                <input asp-for="DayFrom" class="form-control" />
                <span asp-validation-for="DayFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayTill" class="control-label"></label>
                <input asp-for="DayTill" class="form-control" />
                <span asp-validation-for="DayTill" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WithKids" /> @Html.DisplayNameFor(model => model.WithKids)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Info" class="control-label"></label>
                <input asp-for="Info" class="form-control" />
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
