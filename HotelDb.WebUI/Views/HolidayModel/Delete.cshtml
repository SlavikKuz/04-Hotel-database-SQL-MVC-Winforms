@model HotelDb.WebUI.Models.HolidayListModel

@{
    ViewData["Title"] = "Delete";
}

    <div class="mx-auto">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <hr />
            <dl class="row mx-auto">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HolidayDay)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HolidayDay)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HolidayName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HolidayName)
                </dd>
            </dl>


            <form asp-action="Delete">
                @Html.HiddenFor(model => model.HolidayId)
                @Html.HiddenFor(model => model.HolidayDay)
                @Html.HiddenFor(model => model.HolidayName)

                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="ShowAll">Back to List</a>
            </form>
        </div>
    </div>
